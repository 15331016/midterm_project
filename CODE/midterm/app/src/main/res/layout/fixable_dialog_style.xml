<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="450dp"
    android:layout_height="300dp"
    android:background="#000000"
    android:id="@+id/Dialog_style"
    tools:context="com.example.yc.midterm.ItemDetailActivity">

    <TextView
        android:id="@+id/fix_title"
        android:text="人物信息"
        android:textSize="20sp"
        android:textColor="#ffffff"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="120dp"
        android:layout_marginStart="100dp" />

    <ImageView
        android:id="@+id/img"
        android:layout_width="80dp"
        android:layout_height="80dp"
        app:srcCompat="@mipmap/girl1"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="10dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="60dp"
        android:layout_marginStart="10dp" />

    <TextView
        android:text="点击可更换头像"
        android:textSize="10sp"
        android:textColor="#ffffff"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/img"
        android:layout_marginTop="2dp"
        app:layout_constraintLeft_toLeftOf="@+id/img"
        app:layout_constraintRight_toRightOf="@+id/img"/>

    <View
        android:id="@+id/message_box"
        android:layout_width="wrap_content"
        android:layout_height="160dp"
        app:layout_constraintLeft_toRightOf="@+id/img"
        android:layout_marginLeft="10dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="50dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="50dp"
        android:layout_marginStart="20dp">
    </View>


    <TextView
        android:id="@+id/addName"
        android:text="姓名:"
        android:textSize="16sp"
        android:textColor="#ffffff"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@+id/img"
        android:layout_marginLeft="20dp"
        app:layout_constraintTop_toTopOf="@+id/message_box"
        android:layout_marginStart="20dp" />

    <EditText
        android:id="@+id/editName"
        android:layout_width="0dp"
        android:layout_height="17dp"
        android:textColor="#ffffff"
        android:textSize="16sp"
        android:background="#000000"
        android:textCursorDrawable="@null"
        android:hint="请输入姓名"
        android:textColorHint="#e9e9e9"
        app:layout_constraintLeft_toRightOf = "@+id/addName"
        app:layout_constraintTop_toTopOf="@+id/message_box"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="4dp"/>

    <TextView
        android:id="@+id/addZi"
        android:text="字："
        android:textSize="16sp"
        android:textColor="#ffffff"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@+id/img"
        android:layout_marginLeft="20dp"
        app:layout_constraintTop_toBottomOf="@+id/addName"
        android:layout_marginTop="1dp"
        android:layout_marginStart="20dp" />

    <EditText
        android:id="@+id/editZi"
        android:layout_width="0dp"
        android:layout_height="17dp"
        android:textColor="#ffffff"
        android:textSize="16sp"
        android:background="#000000"
        android:textCursorDrawable="@null"
        android:hint="请输入字"
        android:textColorHint="#e9e9e9"
        app:layout_constraintLeft_toLeftOf="@id/editName"
        app:layout_constraintTop_toBottomOf ="@id/editName"
        android:layout_marginTop="6dp"
        android:layout_marginLeft="0dp" />

    <TextView
        android:id="@+id/power"
        android:text="势力："
        android:textSize="16sp"
        android:textColor="#ffffff"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintRight_toLeftOf="@+id/addZi"
        app:layout_constraintBottom_toBottomOf="@+id/message_box"
        android:layout_marginRight="3dp"/>

    <TextView
        android:id="@+id/birthplace_now"
        android:text="今为："
        android:textSize="16sp"
        android:textColor="#ffffff"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@+id/img"
        android:layout_marginLeft="20dp"
        app:layout_constraintBottom_toTopOf="@+id/choosePower"
        android:layout_marginStart="20dp"
        android:layout_marginBottom="2dp"/>
    <EditText
        android:id="@+id/editNowPlace"
        android:layout_width="0dp"
        android:layout_height="17dp"
        android:textColor="#ffffff"
        android:textSize="16sp"
        android:background="#000000"
        android:textCursorDrawable="@null"
        android:hint="请输入今为地域"
        android:textColorHint="#e9e9e9"
        app:layout_constraintLeft_toLeftOf="@id/editName"
        app:layout_constraintBottom_toTopOf ="@id/choosePower"
        android:layout_marginBottom="2dp"/>


    <TextView
        android:id="@+id/birthplace"
        android:text="籍贯："
        android:textSize="16sp"
        android:textColor="#ffffff"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@+id/img"
        android:layout_marginLeft="20dp"
        app:layout_constraintBottom_toTopOf="@+id/birthplace_now"
        android:layout_marginStart="20dp" />
    <EditText
        android:id="@+id/editBirthPlace"
        android:layout_width="0dp"
        android:layout_height="17dp"
        android:textColor="#ffffff"
        android:textSize="16sp"
        android:background="#000000"
        android:textCursorDrawable="@null"
        android:hint="请输入籍贯"
        android:textColorHint="#e9e9e9"
        app:layout_constraintLeft_toLeftOf="@id/editName"
        app:layout_constraintBottom_toTopOf ="@id/birthplace_now"
        android:layout_marginLeft="0dp"
        android:layout_marginBottom="-1dp" />

    <TextView
        android:id="@+id/birthAndDeath"
        android:text="生卒:"
        android:textSize="16sp"
        android:textColor="#ffffff"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@+id/img"
        android:layout_marginLeft="20dp"
        app:layout_constraintBottom_toTopOf="@+id/birthplace" />

    <EditText
        android:id="@+id/editBirthAndDeath"
        android:layout_width="0dp"
        android:layout_height="17dp"
        android:textColor="#ffffff"
        android:textSize="16sp"
        android:background="#000000"
        android:textCursorDrawable="@null"
        android:hint="请输入生卒年度"
        android:textColorHint="#e9e9e9"
        app:layout_constraintLeft_toLeftOf="@id/editName"
        app:layout_constraintBottom_toTopOf="@id/birthplace"
        android:layout_marginLeft="0dp"
        android:layout_marginBottom="0dp" />

    <TextView
        android:id="@+id/sex"
        android:text="性别："
        android:textSize="16sp"
        android:textColor="#ffffff"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@+id/img"
        android:layout_marginLeft="20dp"
        app:layout_constraintBottom_toTopOf="@id/birthAndDeath"
        android:layout_marginStart="20dp" />

    <EditText
        android:id="@+id/chooseSex"
        android:layout_width="0dp"
        android:layout_height="17dp"
        android:textColor="#ffffff"
        android:textSize="16sp"
        android:background="#000000"
        android:textColorHint="#e9e9e9"
        android:textCursorDrawable="@null"
        android:hint="请输入性别"
        app:layout_constraintLeft_toLeftOf="@id/editName"
        app:layout_constraintBottom_toTopOf="@+id/birthAndDeath"
        android:layout_marginBottom="0dp"
        android:layout_marginLeft="0dp" />


    <Button
        android:layout_width="wrap_content"
        android:layout_height="45dp"
        android:id="@+id/confirm"
        android:text="确认"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="100dp"
        android:layout_marginStart="100dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="45dp"
        android:id="@+id/cancel"
        android:text="取消"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/confirm"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp"/>

    <RadioGroup
        android:id="@+id/choosePower"
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:layout_marginBottom="0dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="@+id/message_box"
        app:layout_constraintLeft_toRightOf="@+id/img"
        android:layout_marginLeft="17dp">

        <RadioButton
            android:id="@+id/chooseWei"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:buttonTint="#ffffff"
            android:checked="true"
            android:text="魏"
            android:textColor="#ffffff"
            android:textSize="16sp" />

        <RadioButton
            android:id="@+id/chooseShu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:buttonTint="#ffffff"
            android:text="蜀"
            android:textColor="#ffffff"
            android:textSize="16sp" />

        <RadioButton
            android:id="@+id/chooseWu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:buttonTint="#ffffff"
            android:text="吴"
            android:textColor="#ffffff"
            android:textSize="16sp" />

    </RadioGroup>


</android.support.constraint.ConstraintLayout>