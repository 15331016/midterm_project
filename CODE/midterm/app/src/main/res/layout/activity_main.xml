<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#232423"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.yc.midterm.MainActivity">

    <TextView
        android:id="@+id/top"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:background="#ffffff"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <Button
        android:id="@+id/search"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:background="@mipmap/search"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="16dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="11dp" />

    <EditText
        android:id="@+id/search_name"
        android:background="@null"
        android:textCursorDrawable="@null"
        android:hint="请输入名称"
        android:lines="1"
        android:textColor="#000000"
        android:textSize="18sp"
        android:paddingTop="0dp"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/top"
        android:layout_marginTop="8dp"
        app:layout_constraintLeft_toRightOf="@+id/search"
        android:layout_marginLeft="15dp"
        app:layout_constraintRight_toLeftOf="@+id/music"
        android:layout_marginRight="20dp"/>

    <Button
        android:id="@+id/add"
        android:layout_width="22dp"
        android:layout_height="22dp"
        android:background="@mipmap/add"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="50dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="9dp"/>

    <ImageView
        android:id="@+id/music"
        android:layout_width="22dp"
        android:layout_height="22dp"
        app:srcCompat="@mipmap/play"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="20dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="9dp" />

    <TextView
        android:id="@+id/bottom"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:background="#ffffff"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <Button
        android:id="@+id/wei"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@mipmap/input_wei"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="5dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="40dp" />

    <Button
        android:id="@+id/shu"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@mipmap/shu"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="5dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <Button
        android:id="@+id/wu"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@mipmap/wu"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="5dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="40dp"/>

    <ListView
        android:id="@+id/list"
        android:visibility="visible"
        android:background="@mipmap/bg1"
        android:layout_width="365dp"
        android:layout_height="500dp"
        app:layout_constraintTop_toBottomOf="@+id/top"
        android:layout_marginTop="10dp"
        app:layout_constraintBottom_toTopOf="@+id/bottom"
        android:layout_marginBottom="10dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintHorizontal_bias="1.0"/>
</android.support.constraint.ConstraintLayout>
