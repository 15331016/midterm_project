<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/bg1"
    android:id="@+id/Dialog_style"
    tools:context="com.example.yc.midterm.ItemDetailActivity">

    <TextView
        android:id="@+id/introduce"
        android:text="人物简介"
        android:textSize="20sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="60dp"/>

    <ImageView
        android:id="@+id/img"
        android:layout_width="120dp"
        android:layout_height="120dp"
        app:srcCompat="@mipmap/caocao"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/introduce"
        android:layout_marginTop="40dp"/>

    <View
        android:id="@+id/message_box"
        android:layout_width="120dp"
        android:layout_height="145dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/img"
        android:layout_marginTop="30dp">
    </View>

    <TextView
        android:id="@+id/name"
        android:text="曹操"
        android:textSize="16sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="@+id/message_box"
        app:layout_constraintTop_toTopOf="@+id/message_box"/>

    <TextView
        android:id="@+id/zi"
        android:text="(字：孟德)"
        android:textSize="14sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@+id/name"
        android:layout_marginLeft="10dp"
        app:layout_constraintTop_toTopOf="@+id/message_box"
        android:layout_marginTop="1dp"/>


    <TextView
        android:id="@+id/power"
        android:text="势力：魏"
        android:textSize="14sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="@+id/message_box"
        app:layout_constraintBottom_toBottomOf="@+id/message_box"
        android:layout_marginBottom="5dp"/>

    <TextView
        android:id="@+id/birthplace_now"
        android:text="今为：安徽亳州"
        android:textSize="14sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="@+id/message_box"
        app:layout_constraintBottom_toTopOf="@+id/power"
        android:layout_marginBottom="5dp"/>

    <TextView
        android:id="@+id/birthplace"
        android:text="籍贯：沛国谯县"
        android:textSize="14sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="@+id/message_box"
        app:layout_constraintBottom_toTopOf="@+id/birthplace_now"
        android:layout_marginBottom="5dp"/>

    <TextView
        android:id="@+id/birthday"
        android:text="生卒：155年~220年"
        android:textSize="14sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="@+id/message_box"
        app:layout_constraintBottom_toTopOf="@+id/birthplace"
        android:layout_marginBottom="5dp"/>

    <TextView
        android:id="@+id/sex"
        android:text="性别：男"
        android:textSize="14sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="@+id/message_box"
        app:layout_constraintBottom_toTopOf="@+id/birthday"
        android:layout_marginBottom="5dp"/>

    <View
        android:id="@+id/message_box2"
        android:layout_width="200dp"
        android:layout_height="35dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/message_box"
        android:layout_marginTop="40dp">
    </View>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/edit"
        android:text="修改"
        app:layout_constraintTop_toTopOf="@+id/message_box2"
        app:layout_constraintLeft_toLeftOf="@+id/message_box2"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/exit"
        android:text="退出"
        app:layout_constraintTop_toTopOf="@+id/message_box2"
        app:layout_constraintRight_toRightOf="@+id/message_box2"/>






</android.support.constraint.ConstraintLayout>